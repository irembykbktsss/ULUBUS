<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:actionBarNavMode="@color/colorPrimary"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="238dp"
        android:text="NEREDEN"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="NEREYE"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_nereden"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinner_nereden"
        app:layout_constraintTop_toBottomOf="@+id/spinner_nereden" />

    <Button
        android:id="@+id/button"
        android:layout_width="385dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:onClick="seferAra"
        android:text="SEFER ARA"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tarihText"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/tarihText"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="date"
        android:orientation="vertical"
        android:text="19.05.18"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:text="19.05.18" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="TARİH"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/spinner_nereye"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinner_nereye"
        app:layout_constraintTop_toBottomOf="@+id/spinner_nereye" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="67dp"
        android:layout_height="40dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="148dp"
        android:gravity="center_vertical"
        android:text="Gün.Ay.Yıl"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tarihText"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Gün.Ay.Yıl" />

    <Spinner
        android:id="@+id/spinner_nereden"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Spinner
        android:id="@+id/spinner_nereye"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</android.support.constraint.ConstraintLayout>